{
    "manifest_version": 2,
    "name": "Notepad",
    "description": "A simple notepad to be used as a Chrome extension",
    "version": "1.0",
    "author" : "SUBHADIP",
    "icons": {
        "256" : "256.png",
        "128" : "128.png",
         "48": "48.png",
          "16" : "16.png"
            },
    
    "background": {
      "scripts": [
        "background.js"
      ],
      "persistent": false
    },
    "browser_action": {
      "default_title": "Notepad",
      "default_popup": "popup.html",
      "default_images": {
        "256" : "256.png",
        "128" : "128.png",
        "48": "48.png",
         "16" : "16.png"
        }
    },
    "options_page": "options.html",
    "options_ui": {
      "page": "options.html",
      "open_in_tab": false
    },
    "permissions": [
      "storage"
    ]
  }